# This is configuration for single Gmail account
# change "YOUR_GMAIL_ADDRESS" with your address appearing as address@gmail.com
# Also create following files and folders:
#  ~/.mutt/cache/headers
#  ~/.mutt/cache/bodies
#  ~/.mutt/certificates/
#
set ssl_starttls=yes
set ssl_force_tls=yes
set imap_user = "YOUR_GMAIL_ADDRESS"
set imap_pass = ""
set from="YOUR_GMAIL_ADDRESS"
set realname="FIRSTNAME LASTNAME"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "imaps://imap.gmail.com/INBOX"
set postponed="imaps://imap.gmail.com/[Gmail]/Drafts"
set header_cache = "~/.mutt/cache/headers"
set message_cachedir = "~/.mutt/cache/bodies"
set certificate_file = "~/.mutt/certificates"
set smtp_url = "smtps://YOUR_GMAIL_ADDRESS@smtp.gmail.com:465/"
set smtp_pass=""
set move = no
set imap_keepalive = 900
set mail_check = 5
set timeout = 10
set sort_aux = last-date-received
set sort = threads
set sort_re

#test below
set pager_index_lines = 10
#set pager_context = 5
#set pager_stop
#set menu_scroll
#set smart_wrap
#set tilde
#unset markers

